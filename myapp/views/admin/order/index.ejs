

<%- include ../../public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

            <%- include ../../public/aside.ejs%>

        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">订单管理
                </li>
                <li class="active">订单列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
            列表展示
        -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>序号</th>
                        <th>订单号</th>
                        <th>商品id</th>
                        <th>商品名称</th>
                        <th>商品价格</th>
                        <th>商品数量</th>
                        <th>商品总价</th>
                        <th>下单时间</th>
                        <th>状态</th>
                        <th>下单人id</th>
                        <th>下单人</th>
                        <th>电话</th>
                        <th>地址</th>
                    </tr>　
                    </thead>
                    <tbody>

                    <%for(var i=0;i<list.length;i++){ %>
                    <tr height="40" style="overflow: hidden;">
                        <td><%=i+1%></td>
                        <td><%=list[i].order_id%></td>
                        <td><%=list[i].product_id%></td>
                        <td><%=list[i].product_title%></td>
                        <td><%=list[i].price%></td>
                        <td><%=list[i].count%></td>
                        <td><%=list[i].all_price%></td>
                        <td><%=list[i].add_time%></td>
                        <td><%=list[i].status%></td>
                        <td><%=list[i].user_id%></td>
                        <td><%=list[i].username%></td>
                        <td><%=list[i].tel%></td>
                        <td><%=list[i].address%></td>


                    </tr>

                    <%}%>

                    </tbody>
                </table>
                <div id="pagination" class="pagination">

                </div>
            </div>

        </div>
    </div>
</div>
<script>


    $(function(){
//        http://jqpaginator.keenwon.com/

        $('#pagination').jqPaginator({
            totalPages: <%=totalPages%>,   /*总页数*/
            visiblePages: 10,
            currentPage:<%=page%>,   /*当前的页数*/
            first: '<li class="first"><a href="javascript:void(0);">首页<\/a><\/li>',
            prev: '<li class="prev"><a href="javascript:void(0);"><i class="arrow arrow2"><\/i>上一页<\/a><\/li>',
            next: '<li class="next"><a href="javascript:void(0);">下一页<i class="arrow arrow3"><\/i><\/a><\/li>',
            last: '<li class="last"><a href="javascript:void(0);">末页<\/a><\/li>',
            page: '<li class="page"><a href="javascript:void(0);">{{page}}<\/a><\/li>',
            onPageChange: function (num, type) {
//                        $('#text').html('当前第' + num + '页');

                console.log(num);

//                        location.href='/admin/user?page='+num;

                if(num!=<%=page%>){   /*注意 死循环*/
                    location.href='/admin/order?page='+num;
                }
            }
        });
    })

</script>
</body>

</html>