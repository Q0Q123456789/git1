<%- include  ../../public/header.ejs%>



<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

            <%- include ../../public/aside.ejs%>



        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">
              
			    <div class="panel-heading">
                  增加商品
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/merchant/doAdd" method="post"  enctype="multipart/form-data" >
                            <ul>
                                <li>  商品名称: <input type="text" name="title"/></li><br/>

                                <li>  商品图片: <input type="file" name="img" style="display: inline;"/></li><br/>
                                <li>  商品描述: <input type="text" name="description"/></li><br/>
                                <li>  商品原价: <input type="text" name="old_price"/></li><br/>
                                <li>  商品现价: <input type="text" name="price"/></li><br/>
                                <li>  商品状态: <input type="text" name="status"/></li><br/>
                                <li>  商品详情: <input type="text" name="product_content"/></li><br/>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

